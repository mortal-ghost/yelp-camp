<%- include('partials/header.ejs') %> <%- include('partials/navbar.ejs') %>

<div class="container mt-2 p-4 bg-light">
  <h1 class="fw-5 mb-4 fw-bold text-dark text-center">
    <%= campground.name %>
  </h1>

  <img
    class="img-fluid rounded img-responsive img-centered mb-5"
    src="<%= campground.image %>"
    alt="<%= campground.name %>"
  />

  <p class="p-4 text-center"><%= campground.description %></p>
</div>

<hr />

<div class="p-1">
  <div class="bg-dark text-light">
    <div class="pt-2 pb-2 container">
      <div class="row flex justify-content-around">
        <p class="col-md-3 mt-2 col-6">Comments</p>
        <form class=" col-md-4 col-lg-3 col-6" method="get" action="/campgrounds/<%= campground._id %>/comments/new">
          <button class="btn btn-primary">
            Add New Comment
          </button>
        </form>
      </div>
    </div>
  </div>
  <% campground.comments.forEach(function(comment){ %>
  <div class="container bg-light p-4 rounded-3">
    <p class="text-dark"><%= comment.text %></p>
    <p class="text-dark fw-bold"><%= comment.author %></p>
  </div>
  <% }); %>
</div>

<%- include('partials/footer.ejs') %>
