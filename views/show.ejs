<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<div class="container mt-2 p-4 bg-light">
<h1 class="fw-5 mb-4 fw-bold text-dark text-center"><%= campground.name %></h1>

<img class="img-fluid rounded img-responsive img-centered mb-5" src="<%= campground.image %>" alt="<%= campground.name %>" />

<p class="p-4 text-center"><%= campground.description %></p>
</div>

<div>
    <% campground.comments.forEach(function(comment){ %>
    <div class="container bg-light p-4 rounded-3">
        <p class="text-dark"><%= comment.text %></p>
        <p class="text-dark fw-bold"> <%= comment.author.username %></p>
    </div>
    <% }); %>
</div>

<%- include('partials/footer.ejs') %>
