<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<div class="mb-5">
  <header class="container border-bottom p-5 bg-light rounded-3">
    <h1 class="display-5 fw-bold">Welcome to YelpCamp</h1>
    <p class="col-md-8 fs-4">
      View our hand-picked campgrounds from all over the world
    </p>
    <p class="fs-4">
      <a href="/campgrounds/new" class="btn btn-primary btn-lg">
        Add New Campground
      </a>
    </p>
  </header>
</div>
<div class="container">
  <div class="row">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-4 col-lg-3 col-sm-6 p-1 border border-1 text-center">
      <div>
        <img
          class="img-fluid img-thumbnail"
          src="<%=campground.image%>"
          alt="campground-image"
        />
        <div class="caption mt-2">
          <h5><%= campground.name %></h5>
        </div>
        <a
          href="/campgrounds/<%= campground._id %>"
          class="mt-1 mb-2 btn btn-primary"
        >
          View Campground
        </a>
      </div>
    </div>

    <% }); %>
  </div>
</div>

<%- include('partials/footer.ejs') %>
